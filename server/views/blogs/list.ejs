<% include ../partials/header.ejs %>

<title>Student-Database</title>
<link rel="icon" type="image/x-icon" href="/Asset/images/favicon/favicon-16x16.png">

<% include ../partials/nav.ejs %>

<main class="container mt-4">
    <div class="row">
        <div class="col-md-10">

            <h1 class="mb-4">Student Database</h1>

            <!-- Add Student Button -->
            <a href="/studentlist/add" class="btn btn-primary mb-3" role="button" id="add-btn">
                <i class="fas fa-plus-circle"></i> Add Student
            </a>
            <br>

            <!-- Student Table -->
            <table class="table table-bordered table-striped table-hover">
                <!-- Table Header -->
                <thead class="thead-dark">
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="text-center col-2">StudentNum</th>
                    <th class="text-center col-4">PhoneNum</th>
                    <th class="text-center col-2">Year</th>
                    <th class="text-center col-1">Gpa</th>
                    <th class="text-center col-2">Actions</th>
                </tr>
                </thead>
                <!-- Table Body -->
                <tbody>
                <% for(let count=0; count<StudentList.length; count++) { %>
                    <tr class="d-flex">
                        <!-- Student Data -->
                        <td class="text-center col-2"><%= StudentList[count].Name %></td>
                        <td class="text-center col-2"><%= StudentList[count].StudentNum %></td>
                        <td class="text-center col-4"><%= StudentList[count].PhoneNum %></td>
                        <td class="text-center col-2"><%= StudentList[count].Year %></td>
                        <td class="text-center col-1"><%= StudentList[count].Gpa %></td>

                        <!-- Edit and Delete Actions -->
                        <td class="text-center col-2">
                            <a href="/studentlist/edit/<%= StudentList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit
                            </a>
                            <a href="#" class="btn btn-danger btn-sm" onclick="confirmDelete('<%= StudentList[count]._id %>')">
                                <i class="fas trash-alt"></i> Delete
                            </a>
                            <!-- JavaScript Confirmation Dialog -->
                            <script>
                                function confirmDelete(studentId) {
                                    var result = confirm("Are you sure you want to delete this entry?");
                                    if (result) {
                                        window.location.href = "/studentlist/delete/" + studentId;
                                    }
                                }
                            </script>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<% include ../partials/footer.ejs %>
<% include ../partials/bottom.ejs %>
