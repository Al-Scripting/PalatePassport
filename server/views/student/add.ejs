<%- include ../partials/header.ejs %>

<title>Add Student</title>
<link rel="icon" type="image/x-icon" href="/assets/images/otu-fav.png">

<%- include ../partials/nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">

            <h1 class="mt-4 mb-4">Add Student</h1>

            <!-- Student Form -->
            <form class="form" method="POST">
                <!-- Full Name -->
                <div class="form-group">
                    <label for="nameTextField">Full Name</label>
                    <input type="text" class="form-control"
                           id="nameTextField"
                           placeholder="Enter the Student's Full Name"
                           name="Name" required>
                </div>

                <!-- Student Number -->
                <div class="form-group mt-3">
                    <label for="StudentNumTextField">Student Number</label>
                    <input type="text" class="form-control"
                           id="StudentNumTextField"
                           placeholder="Enter the Student's OTU Number"
                           name="StudentNum" required>
                </div>

                <!-- Phone Number -->
                <div class="form-group mt-3">
                    <label for="PhoneNumTextField">Phone Number</label>
                    <input type="text" class="form-control"
                           id="PhoneNumTextField"
                           placeholder="Enter the Student's Phone"
                           name="PhoneNum" required>
                </div>

                <!-- Current Year -->
                <div class="form-group mt-3">
                    <label for="YearTextField">Current Year</label>
                    <input type="text" class="form-control"
                           id="YearTextField"
                           placeholder="Enter the current year the Student is In"
                           name="Year" required>
                </div>

                <!-- GPA -->
                <div class="form-group mt-3">
                    <label for="GpaTextField">GPA</label>
                    <input type="text" class="form-control"
                           id="GpaTextField"
                           placeholder="Enter the Student's GPA Score"
                           name="Gpa" required>
                </div>

                <!-- Submit and Cancel Buttons -->
                <button class="btn btn-primary mt-5" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/studentlist" class="btn btn-warning mt-5">
                    <i class="fas fa-undo"></i> Cancel
                </a>

            </form>
        </div>
    </div>
</div>

<%- include ../partials/footer.ejs %>

<%- include ../partials/bottom.ejs %>
